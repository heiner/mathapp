<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

  <TextView
      android:id="@+id/gametype_textview"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:text=""
      style="?android:attr/listSeparatorTextViewStyle"
      android:paddingBottom="8dp"
      />

  <TextView
      android:id="@+id/extratime_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/timer_textview"
      android:layout_toLeftOf="@+id/timer_textview"
      android:textSize="@dimen/extraTimer_fontSize"
      android:text="+ 2 sec "
      android:textColor="@color/acceptGreen"
      android:visibility="invisible"
      />

  <TextView
      android:id="@id/timer_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:textSize="@dimen/timer_textSize"
      android:text="00:00"
      android:paddingRight="8dp"
      android:paddingBottom="1dp"
      />

  <TextView
      android:id="@+id/exercise_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/gametype_textview"
      android:layout_toLeftOf="@+id/answer_edittext"
      android:layout_marginTop="@dimen/vertical_distance_exercise"
      android:text="@string/exercise_start"
      android:textSize="@dimen/exercise_textSize"
      android:fontFamily="sans-serif"
      />
  <EditText
      android:id="@+id/answer_edittext"
      android:layout_width="@dimen/answer_width"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/exercise_textview"
      android:layout_toLeftOf="@+id/send_button"
      android:hint="@string/answer"
      android:inputType="number"
      android:digits="0123456789.kmbKMB"
      android:imeOptions="actionSend"
      android:textSize="@dimen/exercise_textSize"
      />
  <ImageButton
      android:id="@id/send_button"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignParentRight="true"
      android:layout_alignBottom="@id/exercise_textview"
      android:src="@drawable/ic_action_send_now"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"
      android:cropToPadding="false"
      android:onClick="sendAnswer"
      style="?android:attr/borderlessButtonStyle"
      />
  <ImageView
      android:id="@+id/accept_image"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignLeft="@id/send_button"
      android:layout_alignTop="@id/send_button"
      android:src="@drawable/ic_action_accept"
      android:visibility="invisible"
      android:tint="@color/acceptGreen"
      />
  <ImageView
      android:id="@+id/reject_image"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignLeft="@id/send_button"
      android:layout_alignTop="@id/send_button"
      android:src="@drawable/ic_action_cancel"
      android:visibility="invisible"
      android:tint="@color/redTimer"
      />

  <Button
      android:id="@+id/k_button"
      android:layout_width="@dimen/suffix_button_size"
      android:layout_height="@dimen/suffix_button_size"
      android:layout_below="@id/exercise_textview"
      android:layout_alignLeft="@id/answer_edittext"
      android:onClick="insertSuffix"
      android:text="K"
      style="?android:attr/borderlessButtonStyle"
      android:textStyle="bold"
      android:textSize="@dimen/suffix_button_fontSize"
      android:textColor="@color/textColor"
      />
  <Button
      android:id="@+id/m_button"
      android:layout_width="@dimen/suffix_button_size"
      android:layout_height="@dimen/suffix_button_size"
      android:layout_toRightOf="@id/k_button"
      android:layout_alignBottom="@id/k_button"
      android:onClick="insertSuffix"
      android:text="M"
      style="?android:attr/borderlessButtonStyle"
      android:textStyle="bold"
      android:textSize="@dimen/suffix_button_fontSize"
      android:textColor="@color/textColor"
      />

  <TextView
      android:id="@+id/right_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/vertical_distance_answer_stats"
      android:layout_below="@id/k_button"
      android:layout_alignParentLeft="true"
      android:paddingLeft="8dp"
      />
  <TextView
      android:id="@+id/right_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/right_answers_number"
      android:layout_alignBaseline="@id/right_answers_number"
      android:text="@string/right_answers_text"
      />

  <TextView
      android:id="@+id/wrong_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="@dimen/margin_wrong_stat_distance"
      android:layout_alignBaseline="@id/right_answers_number"
      android:text="0"
      android:textStyle="bold"
      />
  <TextView
      android:id="@+id/wrong_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/right_answers_number"
      android:layout_toRightOf="@id/wrong_answers_number"
      android:text="@string/wrong_answers_text"
      />

  <TextView
      android:id="@+id/points_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/points_text"
      android:layout_centerHorizontal="true"
      android:layout_alignBaseline="@id/right_answers_number"
      android:text="0"
      android:textStyle="bold"
      />
  <TextView
      android:id="@id/points_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/right_answers_number"
      android:layout_alignParentRight="true"
      android:text="@string/points_text"
      android:paddingRight="8dp"
      />

  <ScrollView
    android:id="@+id/rolling_results_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/vertical_distance_results"
    android:layout_below="@id/right_answers_number"
    >
    <RelativeLayout
        android:id="@+id/rolling_results_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
      <TextView
          android:id="@+id/question_header"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:text="Question"
          style="?android:attr/listSeparatorTextViewStyle"
          android:layout_weight="1.0"
          />
      <TextView
          android:id="@+id/answer_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_alignBaseline="@id/question_header"
          android:text="Solution"
          android:textSize="14sp"
          android:textStyle="bold"
          android:textAllCaps="true"
          android:textColor="@color/textColor"
          />
      <TextView
          android:id="@+id/user_answer_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignBaseline="@id/question_header"
          android:text="Your answer"
          android:textSize="14sp"
          android:textAllCaps="true"
          android:textStyle="bold"
          android:paddingRight="8dip"
          />

      <TextView
          android:id="@+id/example_question_entry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/question_header"
          android:text=""
          android:paddingLeft="8dip"
          android:visibility="gone"
          />
      <TextView
          android:id="@+id/example_answer_entry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@id/answer_header"
          android:text=""
          android:visibility="gone"
          />
      <TextView
          android:id="@+id/example_user_answer_entry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@id/user_answer_header"
          android:paddingRight="8dip"
          android:text=""
          android:visibility="gone"
          />

    </RelativeLayout>
  </ScrollView>
</RelativeLayout>
