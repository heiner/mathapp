<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

  <TextView
      android:id="@+id/gametype_textview"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:text=""
      style="?android:attr/listSeparatorTextViewStyle"
      android:paddingBottom="8sp"
      />

  <TextView
      android:id="@+id/extratime_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/timer_textview"
      android:layout_toLeftOf="@+id/timer_textview"
      android:textSize="@dimen/extraTimer_fontSize"
      android:text="+ 2 sec "
      android:textColor="@color/acceptGreen"
      android:visibility="invisible"
      />

  <TextView
      android:id="@id/timer_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:textSize="31sp"
      android:text="00:00"
      />

  <TextView
      android:id="@+id/exercise_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/gametype_textview"
      android:layout_toLeftOf="@+id/answer_edittext"
      android:layout_marginTop="@dimen/vertical_distance_exercise"
      android:text="@string/exercise_start"
      android:textSize="@dimen/exercise_textSize"
      android:fontFamily="sans-serif"
      />
  <EditText
      android:id="@+id/answer_edittext"
      android:layout_width="@dimen/answer_width"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/exercise_textview"
      android:layout_toLeftOf="@+id/send_button"
      android:hint="@string/answer"
      android:inputType="number"
      android:digits="0123456789.kmbKMB"
      android:imeOptions="actionSend"
      android:textSize="@dimen/exercise_textSize"
      />
  <ImageButton
      android:id="@id/send_button"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignParentRight="true"
      android:layout_alignBottom="@id/exercise_textview"
      android:src="@drawable/ic_action_send_now"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"
      android:cropToPadding="false"
      android:onClick="sendAnswer"
      style="?android:attr/borderlessButtonStyle"
      />
  <ImageView
      android:id="@+id/accept_image"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignLeft="@id/send_button"
      android:layout_alignTop="@id/send_button"
      android:src="@drawable/ic_action_accept"
      android:visibility="invisible"
      android:tint="@color/acceptGreen"
      />
  <ImageView
      android:id="@+id/reject_image"
      android:layout_width="@dimen/send_button_size"
      android:layout_height="@dimen/send_button_size"
      android:layout_alignLeft="@id/send_button"
      android:layout_alignTop="@id/send_button"
      android:src="@drawable/ic_action_cancel"
      android:visibility="invisible"
      android:tint="@color/redTimer"
      />

  <!--<Space
      android:id="@+id/space_after_question"
      android:layout_width="fill_parent"
      android:layout_height="20dp"
      android:layout_below="@id/exercise_textview"
      android:background="@android:color/transparent"
      />-->

  <TextView
      android:id="@+id/right_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:layout_marginTop="20dp"
      android:layout_below="@id/exercise_textview"
      android:layout_centerHorizontal="true"
      android:layout_toLeftOf="@+id/right_answers_text"
      />
  <TextView
      android:id="@id/right_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/right_answers_text"
      android:layout_below="@id/exercise_textview"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      />
  <TextView
      android:id="@+id/wrong_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/right_answers_text"
      android:layout_toLeftOf="@+id/wrong_answers_text"
      />
  <TextView
      android:id="@id/wrong_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/wrong_answers_text"
      android:layout_below="@id/right_answers_text"
      android:layout_centerHorizontal="true"
      />
</RelativeLayout>
