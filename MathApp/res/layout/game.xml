<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
  <TextView
      android:id="@+id/timer_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="00:00"
      android:textSize="40dp"
      android:layout_alignParentRight="true"
      android:fontFamily="sans-serif-thin"
      />

  <TextView
      android:id="@+id/exercise_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/timer_textview"
      android:layout_marginLeft="@dimen/extra_horizontal_margin"
      android:text="@string/exercise_start"
      android:textSize="@dimen/exercise_textSize"
      android:fontFamily="sans-serif"
      />
  <EditText
      android:id="@+id/answer_edittext"
      android:layout_width="@dimen/answer_width"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/exercise_textview"
      android:layout_toRightOf="@id/exercise_textview"
      android:hint="@string/answer"
      android:inputType="number"
      android:imeOptions="actionSend"
      android:textSize="@dimen/exercise_textSize"
      android:layout_centerHorizontal="true"
      />
  <ImageButton
      android:id="@+id/send_button"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      android:cropToPadding="false"
      android:layout_alignBottom="@id/exercise_textview"
      android:layout_toRightOf="@id/answer_edittext"
      android:layout_marginRight="@dimen/extra_horizontal_margin"
      android:src="@drawable/ic_action_send_now"
      android:onClick="sendAnswer"
      android:background="@android:color/transparent"
      />

  <!--<Space
      android:id="@+id/space_after_question"
      android:layout_width="fill_parent"
      android:layout_height="20dp"
      android:layout_below="@id/exercise_textview"
      android:background="@android:color/transparent"
      />-->

  <TextView
      android:id="@+id/right_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:layout_marginTop="20dp"
      android:layout_below="@id/exercise_textview"
      android:layout_centerHorizontal="true"
      android:layout_toLeftOf="@+id/right_answers_text"
      />
  <TextView
      android:id="@id/right_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/right_answers_text"
      android:layout_below="@id/exercise_textview"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      />
  <TextView
      android:id="@+id/wrong_answers_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/right_answers_text"
      android:layout_toLeftOf="@+id/wrong_answers_text"
      />
  <TextView
      android:id="@id/wrong_answers_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/wrong_answers_text"
      android:layout_below="@id/right_answers_text"
      android:layout_centerHorizontal="true"
      />
</RelativeLayout>
